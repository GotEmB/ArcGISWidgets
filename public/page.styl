@import nib

@keyframes yellowAnimate
	from
		background-color yellow
	to
		background-color transparent

html, body
	margin 0
	padding 0
	position relative
	width 100%
	height 100%
	font-family sans-serif
	font-size 14px

#georefWidgetContainer
	position absolute
	right 35px
	top 75px

#geocoder
	display block
	position absolute
	left 80px
	top 26px

#title
	font-weight bold

.dgrid-cell-padding
	padding 3px 9px

.fixedWidth250 .dijitButtonNode
	width: 250px

.dijitBorderContainer
	border none

.dijitContentPane.dijitBorderContainer-child.dijitBorderContainer-dijitContentPane.dijitBorderContainerPane
	padding 0

	&.no-border
		border none

.claro *
	outline none

.dgrid-scroller
	margin-top 0 !important

.dgrid-header
	z-index 1

th.dgrid-cell
	text-align center

.dgrid-content
	margin-top 23px
	height auto

.field-display
	width 25px
	padding 2px 4px
	background-color #EEE

.field-rasterId
	width 45px
	
	td&
		text-align right

	.dgrid-sort-arrow
		display none

td.field-sourcePoint, td.field-targetPoint
	padding 0

.field-id
	width 25px
	padding 0
	vertical-align middle
	text-align center
	background-color #eee

	.dgrid-selected &
		background-color #bfd6eb

	&.yellow
		background-color yellow

.dgrid-row.yellow
	background-color yellow

	.field-id
		background-color #ee1

.PointGrid
	border-collapse collapse
	width 100%

	td
		padding 0 3px
		font-size 0.9em
		background-color rgba(255, 255, 255, 0.5)

		&:first-child
			border-right solid 1px #ddd
		
		input
			margin 0
			width 100%
			border none
			padding 2px 0
			font-size 1em
			text-align right
			background-color transparent

.dijitAccordionContainer-dijitContentPane
	.dijitDialogPaneActionBar
		margin 9px -9px -9px

	&[style*="padding: 0px;"]
		.dijitDialogPaneActionBar
			border-top none
			margin 0

tr.dijitMenuItem
	td.dijitMenuItemIconCell
		padding 5px 3px 3px 5px

.field-resultId
	width 45px
	
	td&
		text-align right

.field-status
	width 90px

.bold
	font-weight bold